<h1>Flights</h1>
<% @flights.each do |flight| %>
  <section id="flight-<%= flight.id %>">
  <%= flight.number %>
    <% flight.passengers.each do |passenger| %>
      <%= passenger.name %> <%= link_to 'Remove Passenger', "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %>
  <% end %>
</section>
<% end %>
